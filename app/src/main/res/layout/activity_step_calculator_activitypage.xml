<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stepCalculatorActivitypage">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:cpb_background_progressbar_color="#F2F2F2"
        app:cpb_background_progressbar_width="20dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="2500"
        app:cpb_progressbar_color="#F44336"
        app:cpb_progressbar_width="15dp"
        app:cpb_round_border="true" />

    <TextView
        android:id="@+id/showStepsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/showMaxSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showStepsTaken"
        android:layout_centerInParent="true"
        android:text="/2500"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/circularProgressBar"
        android:layout_centerInParent="true"
        android:layout_marginEnd="318dp"
        android:layout_marginRight="318dp"
        android:text="Convertor"
        android:textSize="9dp"
        app:backgroundTint="@color/black" />


</RelativeLayout>